@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MyBlog.Models.RegisterModel

<h2>Login</h2>
<a  asp-controller="Account" asp-action="Login">Login</a>

<form asp-controller="Account" asp-action="Register" asp-antiforgery="true">
	<div class="validation" asp-validation-summary="ModelOnly">	</div>
	<div>
		<div class="form-group">
			<label asp-for="Email">Input Email</label><br />
			<input type="text" asp-for="Email" />
			<span asp-validation-for="Email" />
		</div>
		<div class="form-group">
			<label asp-for="Password">Input Password</label><br />
			<input type="text" asp-for="Password" />
			<span asp-validation-for="Password" />
		</div>
				<div class="form-group">
			<label asp-for="Password">Confirm Password</label><br />
			<input type="text" asp-for="ConfirmPassword" />
			<span asp-validation-for="ConfirmPassword" />
		</div>
		<div class="form-group">
			<input type="submit" value="Register" class="btn" />
		</div>
	</div>
</form>
